<div class="col-md-12">
  
  <h2 class="text-center"> 我加入的討論版 </h2>
  
  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> Description </th>
        <th> Group </th>
        <th> Last Update </th>
      </tr>
    </thead>
    
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> # </td>

          <td> <%= post.content %> </td> 
          <td> <%= post.group.title %> </td> 
          <td> <%= post.updated_at %> </td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>